@model uOrderViewModel

@{
    ViewData["Title"] = "MakeOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <span class="text-danger">
                    @ViewBag.Message
                </span>
            }
            @Html.HiddenFor(model => model.ProductId)
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            @Html.HiddenFor(model => model.UserId)
            <input type="hidden" name="ProductId" value="@Model.UserId" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="container p-3">
                    <input type="submit" value="Make Order" class="btn btn-primary" />
                </div>
            </div>
            <div class="container p-3">
                <div class="row pt-4">
                    <div class="text-center">
                        <a asp-controller="uOrder" asp-action="ProductList" class="btn btn-primary">
                            <i class="bg-info bi-plus-circle"></i> &nbsp; Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
