@model DetailProductViewModel
@{
    ViewData["Title"] = "ProductDetail";
}

<h1>ProductDetail</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="col-12 col-lg-6 pb-4">
                <div class="row">
                    <h4>
                        Product Details
                    </h4>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Product Id:
                    </div>
                    <div class="col-9">
                        @Model.Id
                    </div>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Name:
                    </div>
                    <div class="col-9">
                        @Model.Name
                    </div>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Company:
                    </div>
                    <div class="col-9">
                        @Model.Company
                    </div>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Price:
                    </div>
                    <div class="col-9">
                        @Model.Price
                    </div>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Quantity:
                    </div>
                    <div class="col-9">
                        @Model.Quantity
                    </div>
                </div>
                <div class="row my-1">
                    <div class="col-3">
                        Reserved:
                    </div>
                    <div class="col-9">
                        @Model.ReservedQuantity
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="text-center">
            <a asp-controller="uOrder" asp-action="ProductList" class="btn btn-primary">
                Back to Product List
            </a>
        </div>
    </div>
</div>

